<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.yunikitin.platedetect.Activities.TakePhotoActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/open_button"
        android:id="@+id/open_button"
        android:layout_gravity="center_horizontal"
        android:background="#03ab9b"
        android:layout_marginBottom="50dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/open_plate_imageView"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/recognition_button"
        android:id="@+id/recognize_button"
        android:layout_gravity="center_horizontal"
        android:background="#03ab9b"
        android:textColor="#ffffff"
        android:layout_marginTop="100dp" />

</LinearLayout>
